# Fly.io configuration file
# Copy this to fly.toml and customize for your app

app = "question-bank-backend"
primary_region = "iad"  # Change to your preferred region (iad=US East, lhr=London, etc.)

[build]
  builder = "paketobuildpacks/builder:base"

[env]
  PORT = "8000"
  NODE_ENV = "production"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[services]]
  protocol = "tcp"
  internal_port = 8000
  processes = ["app"]

  [[services.ports]]
    port = 80
    handlers = ["http"]
    force_https = true

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

[[vm]]
  memory_mb = 256
  cpu_kind = "shared"
  cpus = 1


